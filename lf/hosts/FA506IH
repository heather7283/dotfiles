# We set theme first to avoid visual artifacts

# Top
set promptfmt " \033[1m%w/\033[1;32m%f"
set rulerfmt " \033[32mC:%c\033[0m| \033[34mS:%s\033[0m| \033[31mM:%m\033[0m| %i:%t/%h "
set statfmt "\033[36m%p\033[0m| %u|:%g| %S| %t| -> %l"
set timefmt "_2 Jan 2006 15:04"
set cursoractivefmt "\033[1;7m"
set copyfmt "\033[42m"
set selectfmt "\033[44m"
set cutfmt "\033[41m"
set errorfmt "\033[1;31;7m %s "

set truncatechar "â€¦"

# Host-specific, no need for this bloat on remote machines
set icons
set sixel
set mouse

# Now, source main config file
source ~/.config/lf/lfrc
