#!/usr/bin/env bash

background() {
  (
    trap '' HUP
    "$@" </dev/null >/dev/null 2>&1 &
  )
}

if [ -z "$1" ]; then
  echo "you need to specify full path to desktop file or its name"
  exit 1
fi

dirs=()

add_dir() {
    if [ -d "$1" ]; then
        dirs+=("$1")
    fi
}

add_dir ~/.local/share/flatpak/exports/share
add_dir ~/.local/share/applications
add_dir /usr/share/applications

filename="$(realpath "$1")"
if [ ! -f "$filename" ]; then
  # try to search for desktop file ourselves if provided path does not exist
  filename="$(find "${dirs[@]}" -maxdepth 1 -type f -name "$1" -print -quit)"
  if [ -z "$filename" ]; then
    echo "$1 not found in ${dirs[*]}"
    exit 1
  fi
fi

is_term="$(grep -m1 -o -Pe '(?<=^Terminal\=).*' "${filename}")"
exec_line="$(grep -m1 -o -Pe '(?<=^Exec\=).*' "${filename}" | sed 's/%[fFuUdDnNickvm]//g')"

if [ -z "$exec_line" ]; then
  echo "exec line not found in $filename"
  exit 1
fi

if [ "$is_term" = "true" ]; then
  background foot sh -c "$exec_line"
else
  background sh -c "$exec_line"
fi

